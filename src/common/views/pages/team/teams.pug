extends ../../layout

block content
	.inner
		h1 #{title}
		.teams
			if user
				if !user.team
					a(href="/teams/create") Create A team
				if user.team
					a(href=`/teams/${team.slug}`) View your team
			each team in teams
				.team
					.team__meta
						.team__title
							a.link-mask(href=`/teams/${team.slug}`) #{team.name}
